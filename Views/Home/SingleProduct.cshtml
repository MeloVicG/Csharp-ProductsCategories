<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SingleCategory</title>
</head>
@model Association
<body>
    <h1>@ViewBag.CategoryInProd.ProductName</h1>
    <div>
        <div>
            <h4>Categories:</h4>
            @foreach(var cate in ViewBag.AllCategories)
            {
            <li>@cate.CategoryName</li>
            }
        </div>
        <form action="/add-category" method="post">
            <select asp-for="CategoryId">
                <option selected disabled>Select Category</option>
                @foreach(var cat in ViewBag.AllCategories)
                {
                    <option value="@cat.CategoryId">@cat.CategoryName</option>
                }
            </select>
            <input type="hidden" asp-for="ProductId" value=@ViewBag.CategoryInProd.ProductId />

            <button class="btn btn-primary">Submit</button>
        </form>

    </div>


</body>
</html>